.py-5.text-center{:style => "background-image: url('https://static.pingendo.com/cover-bubble-dark.svg');background-size:cover;"}
  .container
    .row
      .mx-auto.col-md-6.col-10.bg-white.p-5.border-dark.border
        %h1.mb-4{:contenteditable => "true"} Registro
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = render "devise/shared/error_messages", resource: resource
          .form-group
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Correo electrónico", class:"form-control"
          .form-group
            = f.text_field :name, class:"form-control", placeholder:"Nombre completo"
          .form-group
            = f.text_field :user_name, class:"form-control", placeholder:"Nombre de usuario"
          .form-group
            - if @minimum_password_length
              %em
            = f.password_field :password, autocomplete: "new-password", placeholder:"Contraseña", class:"form-control"
          .form-group
            = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmar contraseña", class:"form-control"
          .actions
            %small.form-text.text-muted.text-right
              %a{:href => "password/new.html"} Recuperar contraseña
            %small.form-text.text-muted.text-right
              %a{:href => "sign_in.html"} Iniciar sesión
            %br
            - if devise_mapping.rememberable?
              .field
                = f.submit "Registrarse", class:"btn btn-primary"