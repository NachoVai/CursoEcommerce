.row
  .mx-auto.col-md-8.col-10.bg-white.p-5.border-dark.border{:style => "background-image: url('https://static.pingendo.com/cover-bubble-dark.svg');background-size:cover;"}
    %h2
      Editar Perfil
    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render "devise/shared/error_messages", resource: resource

      .form-group
        %br/
        = f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
      .form-group
        = f.text_field :name, class:"form-control", placeholder:"Nombre completo"
      .form-group
        = f.text_field :user_name, class:"form-control", placeholder:"Nombre de usuario"
      .form-group
        = f.password_field :password, autocomplete: "new-password", placeholder:"Nueva contrase침a", class:"form-control"

      .form-group
        = f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirmar nueva contrase침a", class:"form-control"

      .form-group
        = f.password_field :current_password, autocomplete: "current-password", placeholder:"Contrase침a actual", class:"form-control"
      .actions
      %small.form-text.text-muted.text-right
        = link_to "Atr치s", :back
      = f.submit "Atualizar", class:"btn btn-primary"
      .mt-4
      %h3 Cancelar mi cuenta
      %p
        descontento? #{button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class:"btn btn-danger"}
      
